---
/**
 * Hero Section for Homepage
 * Features: Dark background, bold typography, gradient animation (desktop only)
 */
interface Props {
  title: string;
  subtitle: string;
  ctaPrimaryLabel: string;
  ctaPrimaryUrl: string;
  ctaSecondaryLabel?: string;
  ctaSecondaryUrl?: string;
}

const {
  title,
  subtitle,
  ctaPrimaryLabel,
  ctaPrimaryUrl,
  ctaSecondaryLabel,
  ctaSecondaryUrl,
} = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden bg-base">
  <!-- Textured Background -->
  <div class="absolute inset-0 hero-textured-bg"></div>
  
  <!-- Dark overlay for text readability -->
  <div class="absolute inset-0 bg-black/60"></div>

  <!-- Animated background orbs -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <div class="hero-orb hero-orb-1"></div>
    <div class="hero-orb hero-orb-2"></div>
    <div class="hero-orb hero-orb-3"></div>
  </div>

  <!-- Floating particles -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
    <div class="particle particle-5"></div>
    <div class="particle particle-6"></div>
  </div>

  <!-- Content -->
  <div class="container-custom relative z-10 py-20 md:py-0">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Logo -->
      <div class="hero-logo">
        <img 
          src="/images/pasw_logo.svg" 
          alt="Logo Pszczyńskiej Akademii Sztuk Walki"
          class="hero-logo-img logo-white"
          width="600"
          height="250"
          decoding="async"
          loading="eager"
          fetchpriority="high"
        />
      </div>

      <!-- Subtitle -->
      <p 
        class="text-xl md:text-2xl lg:text-3xl mb-10 md:mb-12 max-w-3xl mx-auto text-balance hero-subtitle-gradient"
        set:html={subtitle}
      >
      </p>

      <!-- CTAs -->
      <div 
        class="flex flex-col sm:flex-row gap-4 justify-center items-center"
      >
        <a
          href={ctaPrimaryUrl}
          class="btn btn-primary hero-primary-btn text-lg px-8 py-4 w-full sm:w-auto"
        >
          {ctaPrimaryLabel}
        </a>

        {ctaSecondaryLabel && ctaSecondaryUrl && (
          <a
            href={ctaSecondaryUrl}
            class="btn btn-secondary hero-secondary-btn text-lg px-8 py-4 w-full sm:w-auto"
          >
            {ctaSecondaryLabel}
          </a>
        )}
      </div>

      <!-- Scroll indicator - Glass badge style -->
      <div class="mt-16 md:mt-20">
        <a
          href="#usps"
          class="scroll-badge group"
          aria-label="Przewiń w dół"
        >
          <div class="glass-badge">
            <div class="badge-content">
              <div class="badge-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  class="w-5 h-5"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
                </svg>
              </div>
              <span class="badge-text">Poznaj PASW</span>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero title - white and very bold */
  .hero-title {
    color: var(--color-white) !important;
    -webkit-text-fill-color: var(--color-white) !important;
    font-weight: 900 !important;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
    background: none !important;
    -webkit-background-clip: unset !important;
    background-clip: unset !important;
  }

  /* Animated background orbs - static styles only, animations moved to animations.css */
  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.3;
  }

  .hero-orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--color-primary) 0%, transparent 70%);
    top: -10%;
    left: -5%;
  }

  .hero-orb-2 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, var(--color-gold) 0%, transparent 70%);
    bottom: -10%;
    right: -5%;
  }

  .hero-orb-3 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--color-primary) 0%, transparent 70%);
    top: 50%;
    left: 50%;
  }

  /* Floating particles - static styles only, animations moved to animations.css */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0.4;
  }

  .particle-1 {
    top: 20%;
    left: 10%;
  }

  .particle-2 {
    top: 40%;
    left: 80%;
  }

  .particle-3 {
    top: 60%;
    left: 30%;
  }

  .particle-4 {
    top: 30%;
    right: 20%;
  }

  .particle-5 {
    bottom: 20%;
    left: 60%;
  }

  .particle-6 {
    bottom: 40%;
    right: 40%;
  }

  .hero-textured-bg {
    background: 
      linear-gradient(135deg, #404040 0%, #555555 25%, #404040 50%, #353535 75%, #404040 100%),
      radial-gradient(circle at 25% 25%, #606060 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, #505050 0%, transparent 50%);
    opacity: 1;
    position: relative;
  }

  .hero-textured-bg::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.15) 0%, transparent 40%),
      radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.12) 0%, transparent 50%),
      radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.10) 0%, transparent 45%),
      radial-gradient(circle at 60% 40%, rgba(255, 255, 255, 0.08) 0%, transparent 55%),
      radial-gradient(circle at 90% 60%, rgba(255, 255, 255, 0.06) 0%, transparent 60%),
      radial-gradient(circle at 10% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 35%);
    background-size: 120px 120px, 180px 180px, 90px 90px, 150px 150px, 100px 100px, 80px 80px;
    opacity: 1;
  }

  .hero-textured-bg::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      linear-gradient(90deg, transparent 96%, rgba(255, 255, 255, 0.08) 98%, transparent 100%),
      linear-gradient(0deg, transparent 96%, rgba(255, 255, 255, 0.06) 98%, transparent 100%),
      linear-gradient(45deg, transparent 98%, rgba(255, 255, 255, 0.04) 100%);
    background-size: 40px 40px, 40px 40px, 60px 60px;
    opacity: 0.8;
  }

  /* Ensure text remains readable */
  .hero-title,
  .hero-subtitle {
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
  }

  /* Strong text styling in subtitle */
  .hero-subtitle strong {
    font-weight: 700;
    color: #ffffff;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.9);
  }

  /* Gradient text for subtitle */
  .hero-subtitle-gradient {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-gold) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
    text-shadow: none;
  }

  /* Hero logo */
  .hero-logo {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .hero-logo-img {
    height: 150px;
    width: auto;
    max-width: 400px;
    object-fit: contain;
    filter: drop-shadow(0 6px 20px rgba(0, 0, 0, 0.4));
  }

  .logo-white {
    filter: brightness(0) invert(1) drop-shadow(0 6px 20px rgba(0, 0, 0, 0.4));
  }

  @media (min-width: 768px) {
    .hero-logo-img {
      height: 200px;
      max-width: 500px;
    }
  }

      @media (min-width: 1024px) {
        .hero-logo-img {
          height: 250px;
          max-width: 600px;
        }
      }

      /* Glass Badge Scroll Indicator */
      .scroll-badge {
        display: inline-block;
        cursor: pointer;
      }

      .glass-badge {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        padding: 0.75rem 1.5rem;
        box-shadow: 
          0 8px 32px rgba(0, 0, 0, 0.1),
          0 2px 8px rgba(0, 0, 0, 0.05),
          inset 0 1px 0 rgba(255, 255, 255, 0.2);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        /* Animation badgeFloat loaded via animations.css */
      }

      .badge-content {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: white;
      }

      .badge-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
      }

      .badge-text {
        font-size: 0.875rem;
        font-weight: 500;
        letter-spacing: 0.025em;
        transition: color 0.3s ease;
      }

      /* Hover effects */
      .scroll-badge:hover .glass-badge {
        background: rgba(212, 175, 55, 0.2);
        border-color: rgba(212, 175, 55, 0.4);
        box-shadow: 
          0 12px 40px rgba(212, 175, 55, 0.2),
          0 4px 16px rgba(0, 0, 0, 0.1),
          inset 0 1px 0 rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
        animation: none;
      }

      .scroll-badge:hover .badge-icon {
        transform: translateY(2px);
        color: var(--color-gold);
      }

      .scroll-badge:hover .badge-text {
        color: var(--color-gold);
      }

      /* Focus state */
      .scroll-badge:focus {
        outline: none;
      }

      .scroll-badge:focus .glass-badge {
        outline: 2px solid var(--color-primary);
        outline-offset: 2px;
      }

      /* Animation moved to animations.css - badgeFloat keyframe */
      
      /* Reduce motion for accessibility */
      @media (prefers-reduced-motion: reduce) {
        .scroll-badge:hover .glass-badge {
          transform: translateY(-1px);
        }
      }

      /* Mobile responsiveness */
      @media (max-width: 768px) {
        .glass-badge {
          padding: 0.625rem 1.25rem;
        }
        
        .badge-text {
          font-size: 0.8rem;
        }
        
        .badge-icon {
          width: 18px;
          height: 18px;
        }
      }

      /* Hero primary button - orange gradient override */
      .hero-primary-btn {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-gold) 100%) !important;
        color: white !important;
        border: 2px solid transparent !important;
        box-shadow: 0 4px 12px rgba(229, 57, 53, 0.3), 0 0 20px rgba(255, 140, 66, 0.2) !important;
      }

      .hero-primary-btn:hover:not(:disabled) {
        background: linear-gradient(135deg, #C62828 0%, #FFD700 100%) !important;
        color: white !important;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(229, 57, 53, 0.4), 0 0 25px rgba(255, 140, 66, 0.3) !important;
      }

      /* Hero secondary button - orange gradient hover */
      .hero-secondary-btn:hover:not(:disabled) {
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-gold) 100%) !important;
        color: white !important;
        border-color: var(--color-primary) !important;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(229, 57, 53, 0.4) !important;
      }

      /* Mobile responsive button sizing */
      @media (max-width: 640px) {
        .hero-primary-btn {
          padding: 0.75rem 1.5rem !important;
          font-size: 0.875rem !important;
        }
      }

      /* Mobile responsive subtitle sizing */
      @media (max-width: 640px) {
        .hero-subtitle-gradient {
          font-size: 1.375rem !important;
          line-height: 1.4 !important;
        }
      }
    </style>

