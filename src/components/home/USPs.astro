---

<section id="usps" class="section-padding" style="background-color: var(--color-surface-gray);">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      {usps.map((usp, index) => (
        <div 
          class="group text-center p-8 rounded-2xl transition-all duration-300 usp-card"
          style="background-color: var(--color-base);"
          data-animate-on-scroll
        >
          {/* Icon */}
          <div 
            class="w-16 h-16 mx-auto mb-6 rounded-full flex items-center justify-center transition-all duration-300"
            style="background-color: rgba(212, 175, 55, 0.1);"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-8 h-8"
              style="color: var(--color-gold);"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[usp.icon] || iconPaths.star} />
            </svg>
          </div>

          {/* Title */}
          <h3 class="text-2xl font-display mb-3" style="color: var(--color-white);">
            {usp.title}
          </h3>

          {/* Description */}
          <p class="leading-relaxed" style="color: var(--color-text-secondary);">
            {usp.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .usp-card {
    position: relative;
    transition: all 0.3s ease;
    border: 2px solid;
    border-image: linear-gradient(135deg, var(--color-primary) 0%, var(--color-gold) 100%) 1;
  }

  .usp-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(229, 57, 53, 0.4);
  }

  /* Ensure elements are visible by default - animations.css will hide them if loaded */
  [data-animate-on-scroll] {
    opacity: 1;
    transform: translateY(0);
  }
</style>

