---
/**
 * Big Call-to-Action Section
 */
interface Props {
  title: string;
  subtitle?: string;
  buttonLabel: string;
  buttonUrl: string;
}

const { title, subtitle, buttonLabel, buttonUrl } = Astro.props;
---

<section class="section-padding bg-gradient-to-br from-primary to-red-700 relative overflow-hidden">
  {/* Background pattern */}
  <div class="absolute inset-0 opacity-10" aria-hidden="true">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=60 height=60 viewBox=0 0 60 60 xmlns=http://www.w3.org/2000/svg%3E%3Cg fill=none fill-rule=evenodd%3E%3Cg fill=%23ffffff fill-opacity=0.4%3E%3Cpath d=M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      {/* Title */}
      <h2 class="heading-lg font-display text-white mb-6">
        {title}
      </h2>

      {/* Subtitle */}
      {subtitle && (
        <p class="text-xl md:text-2xl text-white/90 mb-10 max-w-2xl mx-auto text-balance">
          {subtitle}
        </p>
      )}

      {/* CTA Button */}
      <a
        href={buttonUrl}
        class="btn btn-secondary text-lg px-8 py-4 inline-flex items-center gap-3"
      >
        {buttonLabel}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="w-6 h-6 transition-transform duration-300 group-hover:translate-x-1"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

